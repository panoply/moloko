{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "dist/**",
    "test",
    "index.mjs",
    "index.js",
    "index.d.ts"
  ],
  "include": [
    "src",
    "types",
    "node_modules/.ace/build/src/ace.js",
    "tsup.ts"
 ],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"],
  },
  "compilerOptions": {
    "incremental": false,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "target": "ES6",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "types": ["./index.d.ts"],
      "utils": ["./src/utils.ts"],
      "attrs": ["./src/attrs.ts"],
      "actions": ["./src/actions.ts"],
      "store": ["./src/store.ts"],
      "editor/*": ["./src/editor/*"],
      "monaco/*": ["./src/monaco/*"],
      "monaco-editor": ["./node_modules/esm/vs/editor/editor.main.js"],
      "bss": ["./types/bss.d.ts"]
    }
  }
}
