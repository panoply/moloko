<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moloko Editor</title>

{% # esthetic-ignore-next %}
    <script type="module">
      import moloko from "./moloko/moloko.js"

      moloko.mount(document.body, {
        resolve: {
          path: 'moloko'
        }
      })

    </script>
    <style>
      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      .loading {
        display: inline-block;
        width: 3rem;
        height: 3rem;
        vertical-align: -0.125em;
        border: 0.3rem solid #42434E;
        border-right-color: #e45589;
        border-radius: 50%;
        animation: 0.65s linear infinite spin;
      }

    </style>
  </head>

  <body style="margin: 0;">
    <div style="
      background-color: #0f1215;
      width: 100vw;
      height: 100vh;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      align-content: center;">
      <div style="display: flex; justify-content: center; width: 100%; margin-top: 5%;">
        {% include 'logo' %}
      </div>
      <div style="display: flex; justify-content: center; width: 100%; margin-top: 50px;">
        <div class="loading"></div>
      </div>
    </div>
  </body>

</html>